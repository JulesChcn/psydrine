<div class="cooool" style="overflow:scroll; height:400px; background-color: $pink;">
    <% @posts.each do |post| %>
    <div class="col-xs-12 col-md-4 text-center" >
      <div class="text-center limited-cont">
        <h2><%= post.title %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
        <p> <%= raw(post.body).first(300).html_safe + "..." %></p>
      </div>
      <div class="text-center">
        <%= link_to "READ MORE", post_path(post) %>
      </div>
      <%= link_to "Show", post_path(post), class: "btn btn-primary" %>
      <%= link_to "Edit", edit_post_path(post), class: "btn btn-default" %>
      <%= link_to "Delete", post_path(post), class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %>
      <hr />
    </div>
    <% end %>
  <%= link_to "New Article", new_path(@post), class: "btn btn-primary" %>
  </div>
  </div>
</div>
